<p style="color: green"><%= notice %></p>

<%= render @photo %>

<%= form_with(model: @like, url: likes_path(photo_id: @photo.id), method: :post) do |form| %>
  <div>
    <%= label_tag 'category_id', 'Choose a Category:' %>
    <%= select_tag 'category_id', options_from_collection_for_select(@categories, 'id', 'name'), prompt: 'Select a Category' %>
  </div>

 <div>
    <%= form.text_field :category_name, placeholder: "Or type a new category name", name: "like[category_name]" %>
    <%= form.submit "Like Photo", class: "btn btn-primary" %>
  </div>
<% end %>

<div>
  <%= link_to "Like", likes_path, @unsplash_photos %>
  <%= link_to "Edit this photo", edit_photo_path(@photo) %> |
  <%= link_to "Back to photos", photos_path %>

  <%= button_to "Destroy this photo", @photo, method: :delete %>
</div>
