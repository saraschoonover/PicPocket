<div class="container">
  <%= render partial: 'search' %>
  <div class="row">
    <% @photos.each do |photo| %>
      <div class="col-md-4">
        <div class="card m-2" data-bs-toggle="modal" data-bs-target="#photoModal<%= photo.id %>">
          <img src="<%= photo.image %>" alt="Photo" class="card-img-top">
          <div class="card-body d-flex justify-content-between align-items-center">
            <h5 class="card-title"><%= photo.caption %></h5>
            <%= render partial: 'like_form', locals: { photo: photo } %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<% @photos.each do |photo| %>
  <div class="modal fade" id="photoModal<%= photo.id %>" tabindex="-1" role="dialog" aria-labelledby="photoModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="photoModalLabel"><%= photo.caption %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <img src="<%= photo.image %>" alt="Large Photo" class="img-fluid">
        </div>
      </div>
    </div>
  </div>
<% end %>
