<p style="color: green"><%= notice %></p>

<h1>Likes</h1>

<%= form_tag(likes_path, method: :get) do %>
  <%= select_tag(:category_id, options_from_collection_for_select(@categories, 'id', 'name', params[:category_id]), prompt: 'All Categories') %>
  <%= submit_tag 'Filter' %>
<% end %>
<%= p @categories %>
<div id="likes">
  <% @likes.each do |like| %>
    <%= render like %>
    <p>
      <%= link_to "Show this like", like %>
    </p>
  <% end %>
</div>

<%= link_to "New like", new_like_path %>
