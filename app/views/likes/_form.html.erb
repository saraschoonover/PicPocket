<%= form_with(model: like) do |form| %>
  <% if like.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(like.errors.count, "error") %> prohibited this like from being saved:</h2>

      <ul>
        <% like.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :photo_id, style: "display: block" %>
    <%= form.number_field :photo_id %>
  </div>

  <div>
    <%= form.label :user_id, style: "display: block" %>
    <%= form.number_field :user_id %>
  </div>
    <%= form.label :caption, style: "display: block" %>
    <%= form.text_field :caption %>
  </div>

  <div>
    <%= form.label :image, style: "display: block" %>
    <%= form.text_field :image %>
  </div>
  <div>
    <%= form.label :category_id, style: "display: block" %>
    <%= form.collection_select :category_id, @categories, :id, :name, prompt: 'Select a category' %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
